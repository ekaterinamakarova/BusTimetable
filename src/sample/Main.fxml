<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="320.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <children>
    <MenuBar VBox.vgrow="NEVER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#onNewClick" text="New" />
                  <MenuItem mnemonicParsing="false" onAction="#onOpenClick" text="Open" />
                  <MenuItem mnemonicParsing="false" onAction="#onSaveClick" text="Save" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#onExportClick" text="Export" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Quit" />
              </items>
            </Menu>
         </menus></MenuBar>
      <HBox prefHeight="400.0" prefWidth="640.0">
         <children>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label layoutX="25.0" layoutY="14.0" text="Bus" />
                  <DatePicker id="datePickerDate" fx:id="datePickerDate" layoutX="25.0" layoutY="178.0" onAction="#onDatePickerDateChanged" prefHeight="29.0" prefWidth="150.0" />
                  <Label layoutX="26.0" layoutY="161.0" text="Date" />
                  <Label layoutX="27.0" layoutY="72.0" text="Bus Stop" />
                  <ComboBox id="comboBoxBusStop" fx:id="comboBoxBusStop" layoutX="23.0" layoutY="89.0" onAction="#onComboBoxBusStopChanged" prefHeight="25.0" prefWidth="150.0" promptText="Select a bus stop" />
                  <TextField fx:id="textFieldBus" layoutX="25.0" layoutY="31.0" promptText="Name" />
                  <TextField fx:id="textFieldBusStop" layoutX="23.0" layoutY="114.0" prefHeight="29.0" prefWidth="150.0" promptText="Create new bus stop" />
                  <Button id="buttonAdd" fx:id="buttonStopAdd" layoutX="148.0" layoutY="148.0" mnemonicParsing="false" onAction="#onButtonStopAdd" prefHeight="25.0" prefWidth="25.0" text="+" />
                  <Button id="buttonStopRemove" fx:id="buttonStopRemove" layoutX="116.0" layoutY="148.0" mnemonicParsing="false" onAction="#onButtonStopRemove" prefHeight="25.0" prefWidth="25.0" text="-" />
                  <Button fx:id="buttonSave" layoutX="25.0" layoutY="234.0" mnemonicParsing="false" onAction="#onSaveClick" prefHeight="25.0" prefWidth="145.0" text="Save" />
                  <Separator layoutX="17.0" layoutY="214.0" prefHeight="9.0" prefWidth="167.0" />
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="440.0">
               <children>
                  <Separator layoutX="-1.0" layoutY="15.0" orientation="VERTICAL" prefHeight="270.0" prefWidth="30.0" />
                  <Label layoutX="44.0" layoutY="14.0" text="Bus Stop Timetable" />
                  <TextArea id="textAreaTimetable" fx:id="textAreaTimetable" layoutX="35.0" layoutY="31.0" prefHeight="100.0" prefWidth="370.0" />
                  <Label layoutX="34.0" layoutY="180.0" text="Type" />
                  <ComboBox id="comboBoxType" fx:id="comboBoxType" layoutX="29.0" layoutY="197.0" prefWidth="150.0" promptText="Select bus type" />
                  <Label layoutX="33.0" layoutY="231.0" text="From:" />
                  <TextField id="textFieldFrom" fx:id="textFieldFrom" layoutX="32.0" layoutY="248.0" promptText="From" />
                  <Label layoutX="261.0" layoutY="231.0" text="Destination:" />
                  <TextField id="textFIeldDestination" fx:id="textFieldDestination" layoutX="260.0" layoutY="248.0" promptText="To" />
                  <Button fx:id="buttonUpdateTimetable" layoutX="260.0" layoutY="138.0" mnemonicParsing="false" onAction="#onUpdateTimetableClick" prefHeight="25.0" prefWidth="145.0" text="Update bus stop" />
                  <Separator layoutX="23.0" layoutY="163.0" prefHeight="9.0" prefWidth="394.0" />
                  <Label layoutX="38.0" layoutY="142.0" text="Bus Stop:" />
                  <TextField fx:id="textFieldBusStopTimetable" layoutX="96.0" layoutY="136.0" prefHeight="29.0" prefWidth="150.0" promptText="Bus stop name" />
               </children>
            </AnchorPane>
         </children>
      </HBox>
  </children>
</VBox>
